{
  "manifest_version": 3,
  "name": "YouTube Mix Blocker",
  "version": "1.0",
    "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon_16.png",
      "64": "icon_64.png",
      "128": "icon_128.png"
    }
  }
}
